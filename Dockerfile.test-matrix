ARG PYTHON_VERSION=3.13
ARG NODE_VERSION=22

FROM debian:bookworm-slim

ARG PYTHON_VERSION
ARG NODE_VERSION

WORKDIR /app

# Install build dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    pkg-config \
    libclang-dev \
    git \
    zlib1g-dev \
    libssl-dev \
    libbz2-dev \
    libreadline-dev \
    libsqlite3-dev \
    libncursesw5-dev \
    libffi-dev \
    liblzma-dev \
    libglib2.0-dev \
    libunwind-dev \
    && rm -rf /var/lib/apt/lists/*

# Install Python via pyenv
ENV PYENV_ROOT="/root/.pyenv"
ENV PATH="$PYENV_ROOT/bin:$PYENV_ROOT/shims:$PATH"
RUN curl -fsSL https://pyenv.run | bash \
    && pyenv install ${PYTHON_VERSION} \
    && pyenv global ${PYTHON_VERSION} \
    && python --version

# Install Node.js via nvm
ENV NVM_DIR="/root/.nvm"
RUN curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.40.1/install.sh | bash \
    && . "$NVM_DIR/nvm.sh" \
    && nvm install ${NODE_VERSION} \
    && nvm alias default ${NODE_VERSION}

# Set up Node.js path (nvm doesn't set version in path, need to find it)
SHELL ["/bin/bash", "-c"]
RUN . "$NVM_DIR/nvm.sh" && echo "export PATH=$(dirname $(which node)):\$PATH" >> /root/.bashrc
ENV PATH="/root/.nvm/versions/node/default/bin:$PATH"

# Install Rust
RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
ENV PATH="/root/.cargo/bin:$PATH"

# Copy project files
COPY . .

# Build with Node.js addon
RUN . "$NVM_DIR/nvm.sh" && make addon-install && cargo build --release

RUN make -C tests clean && make -C tests

# Run tests
CMD ["/bin/bash", "-c", ". $NVM_DIR/nvm.sh && cargo test --release"]
